{
    "name": "rx-lang",
    "displayName": "RX Lang",
    "description": "Syntax Highlight for RX Language",
    "version": "0.0.9",
    "publisher": "RaminRX7",
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "rx",
                "aliases": [
                    "RX",
                    "rx"
                ],
                "extensions": [
                    ".rx",
                    ".rx7"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rx",
                "scopeName": "source.rx7",
                "path": "./syntaxes/rx.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "rx",
                "path": "./snippets/snippets.json"
            }
        ]
    }
}
